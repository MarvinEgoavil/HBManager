<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fragmentsAgenda.NuevaAgendaFragment">
    <include layout="@layout/toolbar_nuevo_contacto"
        android:id="@+id/include_toolbar_nuevo_contacto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar_nuevo_contacto"
        android:paddingTop="15sp"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etNombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:hint="Nombre"
            android:gravity="center"
            android:layout_marginTop="15sp"
            android:text="" />
        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:textColor="@color/purple_500"
            android:hint="Fecha de nacimiento"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:text=""
            />
        <Button
            android:id="@+id/btnElegirFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elegir foto"/>
        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/ic_photo"
            />
        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Publicar"/>
    </LinearLayout>



</RelativeLayout>